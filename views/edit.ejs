<%- include('partials/header.ejs') %>
<% blog.forEach(blog => { %>
<section  id="create">
    <div class="heading">
        <h1>Create new blog</h1>
    </div>
    <div class="inside">
        <form action="/edit/<%= blog.id %>?_method=put" method="post">
            <input name='title' value="<%= blog.title %>" placeholder="title" type="text">
            <input name='img_url' value="<%= blog.img_url %>" placeholder="img-url" type="text">
            <textarea name="description" id="" cols="100" rows="10"><%= blog.description %></textarea>
            <div class="btn-container">
                <button class="btn">Submit</button>
            </div>
        </form>
    </div>
<% }) %> 

</section>




